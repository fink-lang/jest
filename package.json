{
  "name": "@fink/jest",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fink-lang/jest"
  },
  "bugs": "https://github.com/fink-lang/jest/issues",
  "homepage": "https://github.com/fink-lang/jest",
  "scripts": {
    "default": "run clean build test",
    "clean": "rimraf ./build",
    "build": "run build:*",
    "build:dir": "mkdir -p ./build/pkg/",
    "build:fnk": "fnk --src ./src --out-dir build/pkg --ignore './src/**/*.test.fnk'",
    "build:files": "cp ./package.json ./README.md ./LICENSE ./build/pkg/",
    "test": "run jest",
    "jest": "jest --verbose --runInBand --no-cache ",
    "cd": "run clean build test release",
    "release": "semantic-release"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@fink/larix": ">=9.0.0",
    "@fink/loxia": ">=8.0.1"
  },
  "devDependencies": {
    "@fink/cli": "^5.0.0",
    "@fink/larix": "^9.0.0",
    "@fink/loxia": "^8.0.1",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "jest-cli": "^26.0.0",
    "npx-run": "^2.1.2",
    "semantic-release": "^17.0.4"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@fink/std-lib": "^1.0.0"
  }
}
