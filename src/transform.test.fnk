{process} = import './transform'
{describe, it, expect, to_match_snapshot, to_throw} = import '.'


describe process, fn:

  it 'compiles fink', fn:
    {code, map} = process
      'foo = 1234 || spam'
      '/temp/src/foobar.fnk'
      {rootDir: '/temp/src'}

    expect
      {code, map}
      to_match_snapshot


  it 'compiles fink with cov', fn:
    {code, map} = process
      'foo = 1234 || spam'
      '/temp/src/foobar.fnk'
      {rootDir: '/temp/src'}
      {instrument: true}

    expect
      {code, map}
      to_match_snapshot


  it 'handles errors', fn:
    expect
      fn: process '123 = foo', 'foobar.fnk', {rootDir: './src'}
      to_throw `
        foobar.fnk:1:0
        1| 123 = foo
           ^

        Unable to transform 'assign ='`
